# Log Analyser Docker Environment Configuration
# Copy this to .env and fill in your values

# Port Configuration
BACKEND_PORT=8000
FRONTEND_PORT=3000

# Email Alerts Configuration (Optional)
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your-app-password
ALERT_RECIPIENT=alerts-recipient@example.com

# Slack Integration (Optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# AWS Bedrock Configuration for AI Analytics (Optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_DEFAULT_REGION=us-east-1
BEDROCK_ENABLED=true
BEDROCK_REGION=us-east-1

# Application Settings
LOG_LEVEL=INFO
MAX_LOGS_IN_MEMORY=10000
AI_ANALYTICS_ENABLED=true

# Frontend API URL (usually leave as default)
REACT_APP_API_URL=http://localhost:8000

# Development vs Production
NODE_ENV=production
