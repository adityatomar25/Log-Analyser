# AWS Bedrock Configuration
# Copy this file to .env and configure your AWS credentials

# AWS Credentials (choose one method)
# Method 1: Direct credentials (not recommended for production)
# AWS_ACCESS_KEY_ID=your_access_key_here
# AWS_SECRET_ACCESS_KEY=your_secret_key_here
# AWS_DEFAULT_REGION=ap-south-1

# Method 2: Use AWS CLI credentials (recommended)
# Run: aws configure
# This will create ~/.aws/credentials and ~/.aws/config files

# Method 3: IAM Roles (for EC2/ECS deployment)
# No credentials needed - AWS will use instance role

# Bedrock Configuration
BEDROCK_ENABLED=true
BEDROCK_REGION=ap-south-1
BEDROCK_ANALYSIS_INTERVAL=30

# Model Configuration
BEDROCK_ANOMALY_MODEL=claude_haiku
BEDROCK_CLASSIFICATION_MODEL=claude_sonnet
BEDROCK_EMBEDDINGS_MODEL=titan_embed

# Thresholds
BEDROCK_ANOMALY_THRESHOLD=60
BEDROCK_PREDICTION_CONFIDENCE=70

# Optional: Custom endpoint for Bedrock (if using VPC endpoints)
# BEDROCK_ENDPOINT_URL=https://bedrock-runtime.us-east-1.amazonaws.com

# Application Configuration
BACKEND_PORT=8000
FRONTEND_PORT=3000

# Email alerts (optional)
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your-app-password
ALERT_RECIPIENT=alert-recipient@email.com

# Slack webhook (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
